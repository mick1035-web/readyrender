rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function: Check file size (100MB max)
    function isValidSize() {
      return request.resource.size < 100 * 1024 * 1024;
    }
    
    // 3D Models
    match /models/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && isOwner(userId)
                   && isValidSize()
                   && (request.resource.contentType.matches('model/.*')
                       || request.resource.contentType.matches('application/octet-stream'));
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Images
    match /images/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isOwner(userId)
                   && isValidSize()
                   && request.resource.contentType.matches('image/.*');
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // HDRI Environments
    match /environments/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isOwner(userId)
                   && isValidSize()
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType.matches('application/octet-stream'));
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Thumbnails - read by all authenticated users, write by owner
    match /thumbnails/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null 
        && resource.metadata.uploadedBy == request.auth.uid;
    }
    
    // Deny all other paths (must be last)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
